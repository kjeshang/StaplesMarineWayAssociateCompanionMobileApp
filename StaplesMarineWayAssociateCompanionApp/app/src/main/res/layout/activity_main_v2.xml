<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/imgbtn_goToWebsiteFromSearch"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:contentDescription="TODO"
        app:srcCompat="@mipmap/ic_launcher_staples_canada"
        tools:ignore="ContentDescription,HardcodedText"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"/>

    <TextView
        android:id="@+id/tv_searchProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_searchProduct"
        android:textAlignment="center"
        tools:ignore="TextSizeCheck"
        android:layout_marginVertical="25dp"
        android:layout_marginHorizontal="5dp"
        android:layout_toRightOf="@id/imgbtn_goToWebsiteFromSearch"/>

    <Button
        android:id="@+id/btn_goToAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/ic_launcher_staples_canada_background"
        android:text="@string/btn_goToAdd"
        android:textColor="@color/white"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="5dp"
        android:layout_toRightOf="@id/tv_searchProduct"/>

    <Button
        android:id="@+id/btn_goToBinning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_goToBinning"
        android:textColor="@color/white"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="5dp"
        android:layout_toRightOf="@id/btn_goToAdd"/>

    <SearchView
        android:id="@+id/sv_searchProduct"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="5dp"
        android:layout_below="@id/imgbtn_goToWebsiteFromSearch"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerView_Main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="2dp"
        android:layout_below="@id/sv_searchProduct"/>

</RelativeLayout>

